<main>
  <h1>{{cube.name}}</h1>
  <img class="cube" src="{{cube.imageUrl}}" />
  <div class="details">
    <p><span>Description:</span>{{cube.description}}</p>
    <p><span>Difficulty level:</span>
      {{cube.difficultyLevel}}</p>
    <a class="btn" href="/">Back</a>
    <a class="btn" href="/cubes/{{cube._id}}/attach-accessory">Attach accessory</a>
    {{#if isOwner}}
    <a class="btn" href="/cubes/{{cube._id}}/edit">Edit</a>
    <a class="btn" href="/cubes/{{cube._id}}/delete">Delete</a>
    {{/if}}
  </div>

  {{#if accessories}}
      <h2>Accessories</h2>
      <div class="accessories">
        {{#each accessories}}
          {{>accessory}}
        {{/each}}
      </div>
  {{else}}
    <h3 class="italic">This cube has no accessories yet...</h3>
  {{/if}}
  
</main>