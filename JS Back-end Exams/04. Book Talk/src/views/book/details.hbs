<section class="details-page">
  <h1>Details</h1>
  <article class="details-card">
    <article class="details-card-text">
      <h2>
        Title:<br />
        {{book.title}}
      </h2>
      <h3>Author: {{book.author}}</h3>
      <h3>Stars: {{book.stars}}</h3>
      <h3>Genre: {{book.genre}}</h3>
      <h3>Review: {{book.bookReview}}</h3>

      {{#if isAuthenticated}}
        <!-- If there is no registered user, do not display buttons-->
        <div class="buttons">
          {{#if isCreator}}
            <!-- Only for registered user and author of the review -->
            <a
              href="/books/{{book._id}}/edit"
              class="btn-edit"
            >Edit</a>
            <a
              href="/books/{{book._id}}/delete"
              class="btn-delete"
            >Delete</a>
          {{else}}
            {{#if canAddToWishlist}}
              <!-- logged in user who has not yet wished book-->
              <a
                href="/books/{{book._id}}/add-to-wishlist"
                class="btn-wish"
              >Wish to read</a>

            {{else}}
              <!-- logged in user who has already wished book-->
              <p class="wish-pub">
                You already added the book to your wish list
              </p>
            {{/if}}
          {{/if}}
        </div>
      {{/if}}
    </article>

    <article class="details-card-image">
      <img src="{{book.image}}" />
    </article>
  </article>
</section>