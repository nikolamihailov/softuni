{{#if errors}}
  <div class="errorContainer">
    {{#each errors}}
      <p>{{this}}</p>
    {{/each}}
  </div>
{{/if}}

<section class="login-form-container">
  <form method="POST">
    <h3>Login</h3>
    <label>Email</label>
    <input
      type="email"
      name="email"
      class="box"
      id="email"
      value="{{email}}"
    />
    <label>Password</label>
    <input
      type="password"
      name="password"
      class="box"
      id="password"
    />
    <input type="submit" value="Login" class="btn" />
    <p>
      Don't have an account ?
      <a href="/users/register">Create one</a>
    </p>
  </form>
</section>